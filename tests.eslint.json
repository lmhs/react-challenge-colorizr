{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "linebreak-style": 0,
    "import/prefer-default-export": 0,
    "consistent-return": 0,
    "react/prefer-stateless-function": 0,
    "react/sort-comp": 0,
    "no-unused-expressions": 0,
    "import/no-extraneous-dependencies": ["error", { "devDependencies": ["./tests/**/*"] }]
  },

  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
